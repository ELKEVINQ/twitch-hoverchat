{
  "name": "twitch-hoverchat",
  "version": "1.0.1",
  "main": "index.js",
  "type": "module",
  "build": {
    "appId": "com.nivel45dev.twitchhoverchat",
    "productName": "Twitch HoverChat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "ELKEVINQ",
        "repo": "twitch-hoverchat"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
  "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Kevin Zambrano",
  "license": "ISC",
  "description": "Twitch Chat application to see the chat anytime",
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "@waiting/shared-core": "^23.23.0",
    "electron-updater": "^6.3.9",
    "win32-api": "^26.0.3"
  }
}